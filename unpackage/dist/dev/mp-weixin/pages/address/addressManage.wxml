<view class="content"><view class="row b-b"><text class="tit">联系人</text><input class="input" type="text" placeholder="收货人姓名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','receiver','$event',[]],['addressData']]]]]}}" value="{{addressData.receiver}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号</text><input class="input" type="number" placeholder="收货人手机号码" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],['addressData']]]]]}}" value="{{addressData.phone}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">地址</text><pick-regions vue-id="0e0a4db1-1" default-regions="{{defaultRegions}}" data-event-opts="{{[['^getRegions',[['handleGetRegions']]]]}}" bind:getRegions="__e" bind:__l="__l" vue-slots="{{['default']}}"><block wx:if="{{type=='edit'}}"><text><block wx:if="{{this.addressData.regions==''}}"><text style="font-size:28rpx;color:#999;">选择省市区</text></block><block wx:else><text><text style="font-size:28rpx;">{{regionsName}}</text></text></block></text></block><block wx:else><text><block wx:if="{{addressData.regions==''}}"><text style="font-size:28rpx;color:#999;">选择省市区</text></block><block wx:else><text><text style="font-size:28rpx;">{{regionsName}}</text></text></block></text></block></pick-regions></view><view class="row b-b"><text class="tit">门牌号</text><input class="input" type="text" placeholder="楼号、门牌" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','area','$event',[]],['addressData']]]]]}}" value="{{addressData.area}}" bindinput="__e"/></view><view class="row default-row"><text class="tit">设为默认</text><switch checked="{{addressData.status}}" color="#fa436a" data-event-opts="{{[['change',[['switchChange',['$event']]]]]}}" bindchange="__e"></switch></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button><button data-event-opts="{{[['tap',[['delBtn',['$event']]]]]}}" hidden="{{!(type==='edit')}}" class="del-btn" bindtap="__e">删除</button></view>