/* 商品列表 */
.goods-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  position: relative;
  margin: 0 30rpx;
  border-radius: 20rpx;
  height: 100%;
}
.goods-list .goods-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    box-shadow: 0rpx 10rpx 10rpx rgba(0, 0, 0, 0.1);
    width: 48%;
    padding-bottom: 15rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 20rpx;
}
.goods-list .goods-item:nth-child(2n+1) {
      margin-right: 4%;
}
.goods-list .image-wrapper {
    width: 100%;
    height: 340rpx;
    overflow: hidden;
}
.goods-list .image-wrapper image {
      width: 100%;
      height: 100%;
      opacity: 1;
}
.goods-list .title {
    font-size: 32rpx;
    color: #303133;
    line-height: 60rpx;
    font-size: 28rpx;
    padding: 0 10rpx;
}
.goods-list .price-box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    padding: 0 10rpx;
    font-size: 24rpx;
    color: #909399;
}
.goods-list .price {
    font-size: 32rpx;
    color: #E5A779;
    line-height: 1;
}
.goods-list .price:before {
      content: '\FFE5';
      font-size: 26rpx;
}
.loading {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}

